            </dependencies>
            <repositories>
                <repository>
                    <id>interface21-snapshots</id>
                    <name>Interface21.io Snapshot Repository</name>
                    <url>https://repo.butan092.startdedicated.de/repository/maven-snapshots</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
                <repository>
                    <id>interface21-releases</id>
                    <name>Interface21.io Release Repository</name>
